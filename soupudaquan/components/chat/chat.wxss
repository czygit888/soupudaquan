.msg{
    box-sizing: border-box;
    padding: 20rpx;
    display: flex;
    align-items: flex-start;
}
.avatar{
    flex:0.13;
    width:100rpx;
    height: 100rpx;
    background-repeat:no-repeat ;
    background-position: center -5rpx;
    background-size: 100%;
} 

.info{
    flex:0.7;
    box-sizing: border-box;
    padding: 20rpx;
    background-color: #000;
    color: #fff;
    margin-left: 10rpx;
    border-radius: 10rpx;
    position: relative;
}
.info::before{
    content:'';
    border: 10rpx solid transparent;
    width:0;
    height: 0;
    border-right: 10rpx solid #000;
    position: absolute;
    top:20rpx;
    left: -20rpx;
}
.img{
    width: 182rpx;
    height: 280rpx;
    margin-right: 16rpx;
    overflow: hidden;
    border-radius: 10rpx;
}
.img image{
    width:100%;
    height: 100%;
}