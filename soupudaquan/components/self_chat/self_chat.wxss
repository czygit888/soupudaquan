.container{
    display: flex;
    align-items: flex-start;
    flex-direction: row-reverse;
    margin: 20rpx 0;
}
.avatar{
    width: 100rpx;
    height: 100rpx;
    background-repeat:no-repeat ;
    background-size: cover;
    border-radius: 50%;
    background-position: center;
}
.text{
    max-width: 472rpx;
    background-color: #19be6b;
    margin-right:20rpx;
    box-sizing: border-box;
    padding: 20rpx;
    position: relative;
    border-radius: 10rpx;
    word-wrap:break-word
}
.text::before{
    content:"";
    position: absolute;
    width:0;
    height: 0;
    border:20rpx solid transparent;
    border-left:20rpx solid #19be6b;
    top:20rpx;
    right:-34rpx;

}
.img{
    width: 200rpx;
    height: 280rpx;
    margin-right:20rpx ;
    border-radius: 10rpx;
    overflow: hidden;
}
.img image{
    width: 100%;
    height: 100%;
}