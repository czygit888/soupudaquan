.container{
    width:100%;
    height: 100vh;
    background-color: #f4f4f5;
}
.input-container{
    position: absolute;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx;
    background-color: #fff;
    border-top:2rpx solid #EEEE;
}
.input{
    flex:0.95;
    box-sizing: border-box;
    padding: 10rpx;
    height: 70rpx;
    line-height: 50rpx;
    background-color: #f4f4f5;
}

.addimg{
    border:4rpx solid #000;
    width:50rpx;
    height: 50rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 48rpx;
}
.scroll{
    width:100%;
    height: 90vh;
}